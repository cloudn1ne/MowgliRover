 <root main_tree_to_execute = "MainTree" >
    <BehaviorTree ID="Docked">
      <Sequence name="docked_seq">
        <IsCharging/>
        <SaySomething message="Docked: Bot is charging" />
        <IsMowing/>
        <SaySomething message="Docked: Blade is ON, switching OFF" />
        <MowControl enable="0"/>
        <SaySomething message="Docked: Blade switched OFF" />
      </Sequence>

    </BehaviorTree>

     <BehaviorTree ID="MainTree">
        <Sequence name="root_sequence">
            <SaySomething message="MainTree: START" />
      <!--     <MowControl enable="0"/>  -->
            <SubTree ID="Docked"/>
            <SaySomething message="MainTree: END" />          
        </Sequence>
     </BehaviorTree>
 </root>