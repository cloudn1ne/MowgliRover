<root>
    <BehaviorTree ID="Undocking">
        <Sequence name="seq_Undocking">
            <IfThenElse> 
                <IsCharging/>  <!-- IF isCharging-->
                <DriveBackward distance="1.0" planner="DockingFTCPlanner"/>  <!-- THEN -->    
                <ForceSuccess> <!-- force SUCCESS even if we weren't docked so the sequence can continue -->
                    <SayString message="Not undocking as we are not in the Dock currently" />
                </ForceSuccess>
            </IfThenElse>
        </Sequence>
    </BehaviorTree>
 </root>      